<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
     xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="0.1dp"
    android:paddingRight="0.1dp"
    android:background="@color/bg"
     >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/prefecture_viewpager_item_nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:singleLine="true"
            android:enabled="true"
            android:textColor="@color/黑字体色"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/prefecture_viewpager_item_messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:enabled="true"
            android:textColor="@color/淡灰色"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/prefecture_viewpager_item_imageIma"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        />

</RelativeLayout>
</RelativeLayout>