<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
             android:background="@drawable/returnbtn_selector_bg" 
            android:id="@+id/hp_usedLin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/hp_usedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="二手"
                android:textColor="@drawable/hp_hot_ziti"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/hp_usedImage"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/淡红色" />
        </LinearLayout>

        <LinearLayout
             android:background="@drawable/returnbtn_selector_bg" 
            android:id="@+id/hp_rent_outLin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/hp_rent_outText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="出租"
                android:textColor="@drawable/hp_hot_ziti"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/hp_rent_outImage"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/淡红色"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
             android:background="@drawable/returnbtn_selector_bg" 
            android:id="@+id/hp_freeLin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/hp_freeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="免费送"
                android:textColor="@drawable/hp_hot_ziti"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/hp_freeImage"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/淡红色"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
             android:background="@drawable/returnbtn_selector_bg" 
            android:id="@+id/hp_auctionLin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/hp_auctionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="拍卖"
                android:textColor="@drawable/hp_hot_ziti"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/hp_auctionImage"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/淡红色"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
<ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/三c" />
</LinearLayout>
