<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/digital_returnRel"
            android:layout_width="50dp"
            android:layout_height="match_parent"
             android:background="@drawable/returnbtn_selector_bg" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/returnbtn_bg"
                android:clickable="false"
                android:focusable="false" />
        </RelativeLayout>
        <LinearLayout 
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/circular_bead"
            android:layout_toRightOf="@id/digital_returnRel">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icn_search_bg"/>
         <EditText 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@null"
             android:hint="搜索"
             android:layout_marginLeft="5dp"
             android:textColor="@color/黑字体色"
             android:textSize="@dimen/大字体"
             android:textColorHint="@color/黑字体色"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/三c" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/digital_allcityLin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/digital_allcityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:text="全国"
                android:textColor="@color/黑字体色"
                android:textSize="@dimen/中字体" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@drawable/fx_icn_xiala"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>

        <ImageView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/三c" />

        <LinearLayout
            android:id="@+id/digital_classesLin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                  android:id="@+id/digital_classesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:text="商品分类"
                android:textColor="@color/黑字体色"
                android:textSize="@dimen/中字体" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/fx_icn_xiala"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>

        <ImageView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/三c" />

        <LinearLayout
            android:id="@+id/digital_rankLin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:text="排序"
                android:textColor="@color/黑字体色"
                android:textSize="@dimen/中字体" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@drawable/fx_icn_xiala"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>

        <ImageView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/三c" />
          <LinearLayout
            android:id="@+id/digital_screenLin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:text="筛选"
                android:textColor="@color/黑字体色"
                android:textSize="@dimen/中字体" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@drawable/fx_icn_xiala"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>
        </LinearLayout>
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/三c" />
        
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
      <!--    <com.handmark.pulltorefresh.library.PullToRefreshGridView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/digital_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/三c"
        android:dividerHeight="0.5dp"
        android:cacheColorHint="#00000000"
        android:padding="4dp"
        android:numColumns="2"
        android:fadingEdge="none"
          ptr:ptrShowIndicator="false" 
        android:scrollbars="none" >
    </com.handmark.pulltorefresh.library.PullToRefreshGridView>-->
     <com.handmark.pulltorefresh.library.PullToRefreshGridView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/digital_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:paddingLeft="4dp"
        android:scrollbars="none"
        android:paddingRight="5dp"
        android:numColumns="2"
        ptr:ptrShowIndicator="false" 
        >
</com.handmark.pulltorefresh.library.PullToRefreshGridView>
    <RelativeLayout
            android:id="@+id/digital_promptRel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg" >

            <TextView
                android:id="@+id/digital_promptText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:textColor="@color/淡灰色"
                android:textSize="@dimen/中字体" />

            <Button
                android:id="@+id/digital_promptBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/digital_promptText"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/cry" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
