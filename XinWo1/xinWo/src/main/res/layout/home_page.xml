        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/hp_classesLin6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingTop="16dp" >

                <ImageView
                    android:id="@+id/hp_classesImage6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    />

                <TextView
                    android:id="@+id/hp_classesText6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:clickable="false"
                    android:textColor="@color/黑字体色"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hp_classesLin7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingTop="16dp" >

                <ImageView
                    android:id="@+id/hp_classesImage7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    />

                <TextView
                    android:id="@+id/hp_classesText7"
