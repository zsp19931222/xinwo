<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/hot_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/hot_item_zhongchouImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sy_label_zhongchou" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/hot_item_nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="123123123"
                android:textColor="@color/黑字体色"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/hot_item_nowpriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="当前价"
                    android:textColor="@color/黑字体色"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/hot_item_priceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="123123123"
                    android:textColor="@color/淡红色"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/hot_item_price1Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=" /月"
                    android:textColor="@color/黑字体色"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/hot_item_describeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="123123123"
                    android:textColor="@color/淡灰色"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/hot_item_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/hot_item_btn_bg"
                    android:padding="5dp"
                    android:text="123"
                    android:textColor="@color/white"
                    android:textSize="@dimen/超小字体" />
            </RelativeLayout>
        </LinearLayout>
            <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/sy_bgbox_shadow_down" />
        
    </LinearLayout>


    <ImageView
        android:layout_width="5dp"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent"
        android:background="@drawable/sy_bgbox_shadow_right" />

</LinearLayout>