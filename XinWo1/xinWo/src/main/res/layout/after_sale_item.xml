<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/after_sale_item_orderNumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号：100000000000"
            android:textColor="@color/淡灰色"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/after_sale_item_goodsStateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text="等待卖家发货"
            android:textColor="@color/淡红色"
            android:textSize="12sp" />
    </LinearLayout>
<TextView 
    android:id="@+id/after_sale_item_timeText"
    android:textSize="12sp"
    android:textColor="@color/淡灰色"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="获取时间：2016-10-12 10：10：10"/>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView 
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/after_sale_item_image"/>
    <LinearLayout 
        android:layout_marginLeft="5dp"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/after_sale_item_nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商品名称"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="@color/黑字体色"/>
        <LinearLayout 
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易金额："
                android:textColor="@color/黑字体色"
                android:textSize="12sp"
                />
            <TextView 
                  android:id="@+id/after_sale_item_priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥1222"
                android:textColor="@color/淡红色"
                android:textSize="12sp"
                />
            <RelativeLayout 
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <CheckBox 
                  android:id="@+id/after_sale_item_Box"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_afterbuy_pink"
                    android:text="申请退款"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@drawable/after_sale_ziti"
                    android:button="@null"
                    android:checked="true"
                    />
            </RelativeLayout>
            <TextView 
                android:id="@+id/after_sale_item_relationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系卖家"
                android:textColor="@color/lanse"
                android:textSize="12sp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<ImageView 
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:background="@color/bg"/>
</LinearLayout>