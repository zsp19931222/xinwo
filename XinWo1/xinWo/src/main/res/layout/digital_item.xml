<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="1dp"
    android:paddingBottom="4dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/digital_item_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY" />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/digital_item_goods_nameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/digital_item_image"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="商品名称"
        android:textColor="@color/黑字体色"
        android:textSize="@dimen/中字体" />

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/digital_item_priceText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/digital_item_goods_nameText"
        android:layout_marginTop="4dp"
        android:text="¥"
        android:textColor="@color/淡红色"
        android:textSize="@dimen/超小字体" />

    <TextView
        android:id="@+id/digital_item_priceText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/digital_item_goods_nameText"
        android:layout_toRightOf="@id/digital_item_priceText1"
        android:text="8888"
        android:textColor="@color/淡红色"
        android:textSize="@dimen/中字体" />
    <TextView
        android:id="@+id/digital_item_browseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_below="@id/digital_item_goods_nameText"
        android:text="浏览次数"
        android:textColor="@color/lanse"
        android:textSize="@dimen/小字体" />

</RelativeLayout>