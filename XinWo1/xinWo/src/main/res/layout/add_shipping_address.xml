<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/add_shipping_address_returnRel"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/returnbtn_selector_bg" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/returnbtn_bg"
                android:clickable="false"
                android:focusable="false" />
        </RelativeLayout>

        <TextView
            android:id="@+id/add_shipping_address_titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新增收货地址"
            android:textColor="@color/黑字体色"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/三c" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTen"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginSixteen"
            android:text="收货人："
            android:textColor="@color/黑字体色"
            android:textSize="@dimen/中字体" />

        <EditText
            android:id="@+id/add_shipping_address_consigneeEd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/黑字体色"
            android:textSize="@dimen/中字体" />

        <LinearLayout
            android:id="@+id/add_shipping_address_consigneeDeleteLin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:visibility="invisible" >

            <Button
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/cha"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginOne"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginSixteen"
            android:text="手机号码："
            android:textColor="@color/黑字体色"
            android:textSize="@dimen/中字体" />

        <EditText
            android:id="@+id/add_shipping_address_phoneNumEd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:textColor="@color/黑字体色"
            android:textSize="@dimen/中字体" />

        <LinearLayout
            android:id="@+id/add_shipping_address_phoneNumDeleteLin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:visibility="invisible" >

            <Button
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/cha"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_shipping_address_areaLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginOne"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginSixteen"
            android:text="所在地："
            android:textColor="@color/黑字体色"
            android:textSize="@dimen/中字体" />

        <TextView
            android:id="@+id/add_shipping_address_areaText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/黑字体色"
            android:textSize="@dimen/中字体" />

        <LinearLayout
            android:id="@+id/add_shipping_address_areaDeleteLin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:visibility="invisible" >

            <Button
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/cha"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginOne"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginSixteen"
            android:text="详细地址："
            android:textColor="@color/黑字体色"
            android:textSize="@dimen/中字体" />

        <EditText
            android:id="@+id/add_shipping_address_particularAreaEd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/黑字体色"
            android:textSize="@dimen/中字体" />

        <LinearLayout
            android:id="@+id/add_shipping_address_particularAreaDeleteLin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:visibility="invisible" >

            <Button
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/cha"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>
    </LinearLayout>

