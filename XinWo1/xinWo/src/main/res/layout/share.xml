<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/share_Lin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/marginSixteen" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:background="@drawable/returnbtn_selector_bg"
                android:drawableTop="@drawable/iconfont_qqzone"
                android:text="QQ空间"
                 android:drawablePadding="10dip" 
                android:textColor="@color/黑字体色"
                android:textSize="@dimen/中字体" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/returnbtn_selector_bg"
                android:drawableTop="@drawable/iconfont_pengyouquan"
               android:gravity="bottom|center_horizontal"
                android:text="微信朋友圈"
                android:textColor="@color/黑字体色"
                android:drawablePadding="10dip" 
                android:textSize="@dimen/中字体" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/returnbtn_selector_bg"
                android:drawableTop="@drawable/iconfont_weichat"
               android:gravity="bottom|center_horizontal"
                android:text="微信好友"
                 android:drawablePadding="10dip" 
                android:textColor="@color/黑字体色"
                android:textSize="@dimen/中字体" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/returnbtn_selector_bg"
                android:drawableTop="@drawable/iconfont_qq"
               android:gravity="bottom|center_horizontal"
                android:text="QQ好友"
                 android:drawablePadding="10dip" 
                android:textColor="@color/黑字体色"
                android:textSize="@dimen/中字体" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginFive"
            android:orientation="horizontal" >

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/returnbtn_selector_bg"
                android:drawableTop="@drawable/iconfont_micro_blog"
               android:gravity="bottom|center_horizontal"
                android:text="新浪微博"
                android:textColor="@color/黑字体色"
                 android:drawablePadding="10dip" 
                android:textSize="@dimen/中字体" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
               android:gravity="bottom|center_horizontal"
                android:textColor="@color/黑字体色"
                android:textSize="@dimen/中字体" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
               android:gravity="bottom|center_horizontal"
                android:textColor="@color/黑字体色"
                android:textSize="@dimen/中字体" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
               android:gravity="bottom|center_horizontal"
                android:textColor="@color/黑字体色"
                android:textSize="@dimen/中字体" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/三c" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <Button
            android:id="@+id/share_cancleBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/returnbtn_selector_bg"
            android:paddingBottom="@dimen/marginSixteen"
            android:paddingTop="@dimen/marginSixteen"
            android:text="取消"
            android:textColor="@color/淡红色"
            android:textSize="@dimen/大字体" />
    </RelativeLayout>

</LinearLayout>