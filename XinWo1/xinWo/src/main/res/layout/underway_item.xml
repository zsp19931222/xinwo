<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal" >
    <ImageView 
        android:scaleType="fitXY"
        android:id="@+id/underway_item_image"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <LinearLayout 
        android:layout_marginRight="16dp"
        android:layout_marginLeft="5dp"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/underway_item_nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/黑字体色"
            android:singleLine="true"
            android:ellipsize="end"
            />
        <TextView 
            android:id="@+id/underway_item_describeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/小字体"
            android:textColor="@color/淡灰色"
          android:singleLine="true"
            android:ellipsize="end"
            />
        <LinearLayout 
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ProgressBar
            android:id="@+id/underway_item_Bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:progressDrawable="@drawable/colourful_progressbar" />
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView 
                    android:id="@+id/underway_item_alldemandText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总需："
                    android:textColor="@color/淡灰色"
                    android:textSize="12sp"
                    />
                <LinearLayout 
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余："
                    android:textColor="@color/淡灰色"
                    android:textSize="12sp"
                    />
                    <TextView 
                        android:id="@+id/underway_item_residueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/lanse"
                    android:textSize="12sp"
                    />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <Button 
                android:id="@+id/underway_item_Btn"
                android:layout_width="50dp"
                android:layout_marginLeft="10dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="追加"
                android:background="@drawable/btn_afterbuy_pink"
                android:textColor="@color/淡红色"
                android:textSize="12sp"/>
        </LinearLayout>
        
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="参与人次："
        android:textColor="@color/淡灰色"
        android:textSize="12sp"
        />
    <TextView 
        android:id="@+id/underway_item_personText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/淡红色"
        android:textSize="12sp"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人次"
        android:textColor="@color/淡灰色"
        android:textSize="12sp"
        />
    <TextView 
        android:id="@+id/underway_item_checkText"
        android:paddingTop="5dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="right"
        android:textColor="@color/lanse"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:text="查看我的夺宝号"
        />
</LinearLayout>
    <LinearLayout 
        android:id="@+id/underway_item_announceLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="揭晓倒计时："
            android:textColor="@color/淡灰色"
            android:textSize="12sp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请稍后，正在揭晓中..."
            android:textColor="@color/淡红色"
            android:textSize="12sp"
            />
        
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
