<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout 
    android:id="@+id/main_rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

    <RadioGroup
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone" >

        <RadioButton
            android:id="@+id/main_rb1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center|bottom"
            android:paddingBottom="10dp"
            android:text="首页"
            android:textColor="@drawable/font_bg_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/main_rb2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center|bottom"
            android:paddingBottom="10dp"
            android:text="发现"
            android:textColor="@drawable/font_bg_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/main_rb3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:clickable="false"
            android:gravity="center|bottom"
            android:paddingBottom="10dp"
            android:text="发布"
            android:textColor="@drawable/font_bg_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/main_rb4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center|bottom"
            android:paddingBottom="10dp"
            android:text="清单"
            android:textColor="@drawable/font_bg_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/main_rb5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center|bottom"
            android:paddingBottom="10dp"
            android:text="我的"
            android:textColor="@drawable/font_bg_selector"
            android:textSize="12sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/三c" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/main_LIn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/main_Image1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:clickable="false"
                    android:focusable="false" />

                <TextView
                    android:id="@+id/main_Text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="首页"
                    android:textColor="@color/黑字体色"
                    android:textSize="@dimen/小字体" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_LIn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/main_Image2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:clickable="false"
                    android:focusable="false" />

                <TextView
                    android:id="@+id/main_Text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="首页"
                    android:textColor="@color/黑字体色"
                    android:textSize="@dimen/小字体" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_LIn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/main_Image3"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:id="@+id/main_Text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="首页"
                    android:textColor="@color/黑字体色"
                    android:textSize="@dimen/小字体" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_LIn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/main_Image4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:clickable="false"
                    android:focusable="false" />

                <TextView
                    android:id="@+id/main_Text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="首页"
                    android:textColor="@color/黑字体色"
                    android:textSize="@dimen/小字体" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_LIn5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/main_Image5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:clickable="false"
                    android:focusable="false" />

                <TextView
                    android:id="@+id/main_Text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="首页"
                    android:textColor="@color/黑字体色"
                    android:textSize="@dimen/小字体" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/main_rb3Image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp" />
</RelativeLayout>
<RelativeLayout 
    android:id="@+id/main_advertisement_Rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <ImageView 
        android:id="@+id/main_advertisement_Image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        />
<TextView 
    android:id="@+id/main_advertisement_Text"
    android:layout_width="match_parent"
    android:text="跳过：5S"
    android:textSize="@dimen/大字体"
    android:textColor="@color/淡红色"
    android:gravity="right"
    android:padding="15dp"
    android:layout_height="wrap_content"/>
</RelativeLayout>
</RelativeLayout>