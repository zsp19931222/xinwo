<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="5dp" >

    <ImageView
        android:id="@+id/my_order_item_iamge"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="3"
        android:orientation="vertical" >

        <TextView
             android:id="@+id/my_order_item_nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="商品名称"
            android:textColor="@color/黑字体色"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_order_item_decribeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="商品描述"
            android:textColor="@color/黑字体色"
            android:textSize="12sp" />
<LinearLayout
    android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <LinearLayout 
                    android:id="@+id/my_order_item_startPriceLin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起拍价："
                        android:textColor="@color/黑字体色"
                        android:textSize="12sp"
                        />
                    <TextView 
                         android:id="@+id/my_order_item_startPriceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥576"
                        android:textColor="@color/lanse"
                        android:textSize="12sp"
                        />
                </LinearLayout>
                    <TextView 
                         android:id="@+id/my_order_item_priceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格：¥124"
                        android:textColor="@color/淡红色"
                        android:textSize="16sp"
                        />
                    <LinearLayout 
                        android:id="@+id/my_order_item_tenancyLin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="租期："
                        android:textColor="@color/黑字体色"
                        android:textSize="12sp"
                        />
                    <TextView 
                        android:id="@+id/my_order_item_tenancyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textColor="@color/lanse"
                        android:textSize="12sp"
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="月"
                        android:textColor="@color/黑字体色"
                        android:textSize="12sp"
                        />
                </LinearLayout>
                <TextView 
                    android:id="@+id/my_order_item_timeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2012-01-1 10:10:10"
                        android:textColor="@color/黑字体色"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="12sp"
                        />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom" >

                <Button
                    android:id="@+id/my_order_itemBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_style1"
                    android:text="去付款"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>