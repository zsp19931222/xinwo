<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/change_phone_linear"
    android:background="@color/bg">
    
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
     >
<LinearLayout 
     android:id="@+id/change_binding_phoneNum_returnRel"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:gravity="center">
        <Button
            android:clickable="false"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/returnbtn_bg" />
</LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="换绑手机号"
            android:textColor="@color/黑字体色"
            android:textSize="@dimen/大字体" />
    </RelativeLayout>
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/marginTen"
        android:background="@color/bg"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:background="@color/white">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码："
            android:textSize="@dimen/中字体"
            android:textColor="@color/黑字体色"/>
        <EditText 
            android:inputType="number"
             android:id="@+id/change_binding_phoneNum_oldEd"
            android:textSize="@dimen/中字体"
            android:hint="请输入原手机号码"
            android:layout_width="0dp"
            android:clickable="false"
            android:focusable="false"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"/>
        <LinearLayout 
            android:visibility="invisible"
                  android:id="@+id/change_binding_phoneNum_oldDeleteLin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center">
        <Button 
            android:clickable="false"
            android:focusable="false"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/cha"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg"
        android:layout_marginLeft="16dp"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        >
        <EditText 
            android:inputType="number"
            android:maxLength="6"
         android:id="@+id/change_binding_phoneNum_verification_codeEd"
            android:textSize="@dimen/中字体"
            android:hint="请输入验证码"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"/>
        <LinearLayout 
            android:visibility="invisible"
            android:id="@+id/change_binding_phoneNum_verification_codeDeleteLin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center">
        <Button 
            android:clickable="false"
            android:focusable="false"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/cha"/>
        </LinearLayout>
        <TextView
            android:id="@+id/change_binding_phoneNum_verification_codeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/marginSixteen"
                android:text="获取验证码"
                android:textColor="@color/淡红色"
                android:textSize="@dimen/中字体" />
    </LinearLayout>
        <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg"
     />
     <Button
    android:id="@+id/change_binding_phonenum_confirmBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="50dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="下一步"
                android:background="@drawable/publicbtn_selector_bg"
                android:textColor="@color/white"
                android:textSize="14sp" />
</LinearLayout>
