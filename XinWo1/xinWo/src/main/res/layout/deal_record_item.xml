<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/white"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView 
                android:id="@+id/deal_record_item_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2012-12-12"
                android:textSize="16sp"
                android:textColor="@color/黑字体色"
                />
            <TextView 
                android:id="@+id/deal_record_item_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:12:12"
                android:textSize="12sp"
                android:textColor="@color/黑字体色"
                />
        </LinearLayout>
          <TextView 
              android:id="@+id/deal_record_item_message"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="充值"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/黑字体色"
                />
          <TextView 
              android:id="@+id/deal_record_item_money"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="+¥100"
                android:gravity="center_vertical|right"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:textColor="@color/淡红色"
                />
    </LinearLayout>

</RelativeLayout>
