<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/recommendRel"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/returnbtn_selector_bg" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/returnbtn_bg"
                android:clickable="false"
                android:focusable="false" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="今日推荐"
            android:textColor="@color/黑字体色"
            android:textSize="16sp" />
    </RelativeLayout>
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg"/>
    <LinearLayout 
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/recommend_allPriceText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="4dp"
            android:text="全价"
            android:textSize="12sp"
            android:textColor="@color/淡红色"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <ImageView 
            android:layout_width="1dp"
            android:background="@color/bg"
            android:layout_height="20dp"/>
        <TextView 
            android:id="@+id/recommend_crowdFundingText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="众筹"
            android:textSize="12sp"
            android:paddingTop="5dp"
            android:paddingBottom="4dp"
            android:textColor="@color/黑字体色"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <ImageView 
            android:layout_width="1dp"
            android:background="@color/bg"
            android:layout_height="20dp"/>
        <TextView 
            android:id="@+id/recommend_auctionText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="拍卖"
            android:textSize="12sp"
            android:paddingTop="5dp"
            android:paddingBottom="4dp"
            android:textColor="@color/黑字体色"
            android:gravity="center"
            
            android:layout_height="wrap_content"/>
    <ImageView 
            android:layout_width="1dp"
            android:background="@color/bg"
            android:layout_height="20dp"/>
    <LinearLayout 
        android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView 
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="出租"
            android:textSize="12sp"
            android:id="@+id/recommend_rent_outText"
            android:paddingTop="5dp"
            android:paddingBottom="4dp"
            android:textColor="@color/黑字体色"
            />
        </LinearLayout>
    </LinearLayout> 
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal">
        <ImageView 
           android:id="@+id/recommend_allPriceImage"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:background="@color/淡红色"/>
        <ImageView 
            android:visibility="invisible"
            android:id="@+id/recommend_crowdFundingImage"
             android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:background="@color/淡红色"/>
        <ImageView 
            android:visibility="invisible"
            android:id="@+id/recommend_auctionImage"
             android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:background="@color/淡红色"/>
        <ImageView 
            android:visibility="invisible"
            android:id="@+id/recommend_rent_outImage"
             android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:background="@color/淡红色"/>
    </LinearLayout>
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg"/>
    <FrameLayout 
        android:id="@+id/recommend_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>
