<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/announce_item2_goodsImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="16dp"
            android:layout_weight="3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/announce_item2_nameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/黑字体色"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/announce_item2_describeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/淡灰色"
                android:textSize="12sp" />

       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView 
               android:id="@+id/announce_item2_bidText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="出价：123"
               android:textColor="@color/淡灰色"
               android:textSize="12sp"/>
           <TextView 
               android:layout_marginLeft="20dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="抢夺人数："
               android:textColor="@color/淡灰色"
               android:textSize="12sp"/>
           <TextView 
               android:id="@+id/announce_item2_personText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="8"
               android:textColor="@color/lanse"
               android:textSize="12sp"/>
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="人"
               android:textColor="@color/淡灰色"
               android:textSize="12sp"/>
           
          
       </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成交价："
                    android:textColor="@color/淡灰色"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/announce_item2_transaction_priceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/淡红色"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/announce_item2_checkText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="查看我的夺宝号"
                    android:textColor="@color/lanse"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>