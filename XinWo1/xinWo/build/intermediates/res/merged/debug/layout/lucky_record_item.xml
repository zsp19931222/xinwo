<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >

    <ImageView
        android:layout_marginLeft="16dp"
        android:id="@+id/lucky_record_item_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
         />

    <LinearLayout
        android:layout_marginRight="16dp"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lucky_record_item_nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/黑字体色"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/lucky_record_item_describeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/淡灰色"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/lucky_record_item_Text1Lin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/lucky_record_item_Text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总需："
                        android:textColor="@color/淡灰色"
                        android:textSize="12sp" />

                    <TextView
                         android:id="@+id/lucky_record_item_Text1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/淡灰色"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lucky_record_item_Text2Lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal" >

                    <TextView
                         android:id="@+id/lucky_record_item_Text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本期参与："
                        android:textColor="@color/淡灰色"
                        android:textSize="12sp" />

                    <TextView
                      android:id="@+id/lucky_record_item_Text2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/淡红色"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lucky_record_item_Text3Lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal" >

                    <TextView
                         android:id="@+id/lucky_record_item_Text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="幸运号："
                        android:textColor="@color/淡灰色"
                        android:textSize="12sp" />

                    <TextView
                          android:id="@+id/lucky_record_item_Text3_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/淡红色"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout 
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
              <Button 
                    android:id="@+id/lucky_record_item_btn1"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/淡红色"
                    android:background="@drawable/btn_afterbuy_pink"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="12sp"
                    android:text="确认收货"/>
                <Button 
                    android:id="@+id/lucky_record_item_btn2"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/淡红色"
                      android:background="@drawable/btn_afterbuy_pink"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_height="30dp"
                    android:text="查看状态"/>
            </LinearLayout>
        </LinearLayout>
         <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/lucky_record_item_time1Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="揭晓时间："
                        android:textColor="@color/淡灰色"
                        android:textSize="12sp" />

                    <TextView
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:id="@+id/lucky_record_item_time2Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/淡灰色"
                        android:textSize="12sp" />
                </LinearLayout>
    </LinearLayout>

</LinearLayout>