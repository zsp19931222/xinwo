<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/announce_item1_goodsImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="16dp"
            android:layout_weight="3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/announce_item1_nameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/黑字体色"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/announce_item1_describeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/淡灰色"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/announce_item1_alldemandText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/淡灰色"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本期参与："
                    android:textColor="@color/淡灰色"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/announce_item1_personText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/淡红色"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人次"
                    android:textColor="@color/淡灰色"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/announce_item1_checkText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="查看我的夺宝号"
                    android:textColor="@color/lanse"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
<LinearLayout 
    android:id="@+id/personal_news_fragment1_item_huojiangzhelinear"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="5dp"
    android:background="#fff4f4"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="14dp"
    android:paddingBottom="14dp"
    >
    <com.quwu.xinwo.mywight.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
      android:id="@+id/announce_item1_winner_userImage"
        android:src="@color/lanse"/>
    <LinearLayout 
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获奖者："
                android:textSize="12sp"
                android:textColor="@color/黑字体色"/>
            <TextView 
android:id="@+id/announce_item1_winner_usernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="淹死的金鱼"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/lanse"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本次参与："
                android:textSize="12sp"
                android:textColor="@color/黑字体色"/>
            <TextView 
                android:id="@+id/announce_item1_winner_personText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:textSize="12sp"
                android:textColor="@color/黑字体色"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人次"
                android:textSize="12sp"
                android:textColor="@color/黑字体色"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="幸运号码："
                android:textSize="12sp"
                android:textColor="@color/黑字体色"/>
            <TextView 
                android:id="@+id/announce_item1_winner_luckynumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1006828"
                android:textSize="12sp"
                android:textColor="@color/淡红色"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="揭晓时间："
                android:textSize="12sp"
                android:textColor="@color/黑字体色"/>
            <TextView 
                 android:id="@+id/announce_item1_announceTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="12sp"
                android:textColor="@color/黑字体色"/>
        </LinearLayout>
    </LinearLayout>
        
    </LinearLayout>
</LinearLayout>
</LinearLayout>