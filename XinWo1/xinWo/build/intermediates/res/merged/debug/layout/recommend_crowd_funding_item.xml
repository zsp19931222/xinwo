<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <com.quwu.xinwo.mywight.MyGridView
                android:id="@+id/recommend_crowd_funding_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="auto_fit"
                android:scrollbars="none"
                android:stretchMode="spacingWidthUniform" >
            </com.quwu.xinwo.mywight.MyGridView>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/recommend_crowd_funding_nameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="商品名称"
        android:textColor="@color/黑字体色"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/recommend_crowd_funding_describeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="商品描述"
        android:textColor="@color/黑字体色"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/recommend_crowd_funding_timeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1个小时前"
                        android:textColor="@color/淡灰色"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/recommend_crowd_funding_areaText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="重庆·渝北区"
                        android:textColor="@color/淡灰色"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ProgressBar
                        android:id="@+id/recommend_crowd_funding_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progressDrawable="@drawable/colourful_progressbar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="¥"
                        android:textColor="@color/淡红色"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/recommend_crowd_funding_priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="258"
                android:textColor="@color/淡红色"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/recommend_crowd_funding_residueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="剩余：72"
                android:textColor="@color/淡红色"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/recommend_crowd_funding_Btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/btn_pre_style2"
            android:text="我要抢"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>