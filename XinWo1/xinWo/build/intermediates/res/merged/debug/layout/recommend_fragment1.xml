<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.handmark.pulltorefresh.library.PullToRefreshGridView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recommend_fragment1_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:paddingLeft="4dp"
        android:scrollbars="none"
        android:paddingRight="5dp"
        android:numColumns="2"
        ptr:ptrShowIndicator="false" 
        >
</com.handmark.pulltorefresh.library.PullToRefreshGridView>
<RelativeLayout
            android:id="@+id/recommend_fragment1_promptRel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg"
            android:visibility="gone" >

            <TextView
                android:id="@+id/recommend_fragment1_promptText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="当前还没有数据哟~"
                android:textColor="@color/淡灰色"
                android:textSize="@dimen/中字体" />

            <Button
                android:id="@+id/recommend_fragment1_promptBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/recommend_fragment1_promptText"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/cry" />
        </RelativeLayout>
</RelativeLayout>