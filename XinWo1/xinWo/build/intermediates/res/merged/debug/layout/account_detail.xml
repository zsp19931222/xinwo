<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/account_detail_returnRel"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/returnbtn_selector_bg" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/returnbtn_bg"
                android:clickable="false"
                android:focusable="false" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="账户详情"
            android:textColor="@color/黑字体色"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/三c" />
    <LinearLayout 
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <TextView 
            android:id="@+id/account_detail_Text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/黑字体色"
            android:textSize="@dimen/中字体"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="16dp"/>
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg"/>
        <TextView 
            android:id="@+id/account_detail_Text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/黑字体色"
            android:textSize="@dimen/中字体"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="16dp"/>
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg"/>
        <TextView 
            android:id="@+id/account_detail_Text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/黑字体色"
            android:textSize="@dimen/中字体"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="16dp"/>
    </LinearLayout>
<Button
        android:id="@+id/account_detail_deleteBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/publicbtn_selector_bg"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="解除绑定"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>
