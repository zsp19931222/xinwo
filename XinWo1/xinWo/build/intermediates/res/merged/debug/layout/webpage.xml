<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/webpage_returnRel"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/returnbtn_selector_bg" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/returnbtn_bg"
                android:clickable="false"
                android:focusable="false" />
        </RelativeLayout>

        <TextView
            android:id="@+id/webpage_titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="活动标题"
            android:textColor="@color/黑字体色"
            android:textSize="16sp" />
    </RelativeLayout>
<ProgressBar
       style="?android:attr/progressBarStyleHorizontal"
         android:id="@+id/webpage_myProgressBar"
         android:layout_width="match_parent"
         android:layout_height="3dp"
         />
<WebView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/webpage_weibo"/>
</LinearLayout>
