<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/add_bankcard_returnRel"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/returnbtn_selector_bg" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/returnbtn_bg"
                android:clickable="false"
                android:focusable="false" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加银行卡"
            android:textColor="@color/黑字体色"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/三c" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:text="请绑定持卡人本人的银行卡"
        android:textColor="@color/淡灰色"
        android:textSize="@dimen/小字体" />

    <LinearLayout
        android:id="@+id/add_bankcard_nameLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="16dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="持卡人："
                android:textColor="@color/黑字体色"
                android:textSize="@dimen/中字体" />

            <EditText
                android:id="@+id/add_bankcard_nameEd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请填写真实姓名"
                android:textColor="@color/黑字体色"
                android:textSize="@dimen/中字体" />

            <LinearLayout
                android:id="@+id/add_bankcard_nameDeleteLin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center" >

                <Button
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/cha"
                    android:clickable="false"
                    android:focusable="false" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="16dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡号："
                android:textColor="@color/黑字体色"
                android:textSize="@dimen/中字体" />

            <com.quwu.xinwo.mywight.CardInputEditText
                android:id="@+id/add_bankcard_cardEd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请填写卡号"
                android:inputType="number"
                android:textColor="@color/黑字体色"
                android:textSize="@dimen/中字体" />

            <LinearLayout
                android:id="@+id/add_bankcard_cardDeleteLin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center" >

                <Button
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/cha"
                    android:clickable="false"
                    android:focusable="false" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/add_bankcard_phoneLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="16dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡牌归属："
                android:textColor="@color/黑字体色"
                android:textSize="@dimen/中字体" />

            <TextView
                android:id="@+id/add_bankcard_bankNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:clickable="false"
                android:focusable="false"
                android:textColor="@color/黑字体色"
                android:textSize="@dimen/中字体" />
             <LinearLayout
                 android:visibility="invisible"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center" >

                <Button
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/cha"
                    android:clickable="false"
                    android:focusable="false" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="16dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号："
                android:textColor="@color/黑字体色"
                android:textSize="@dimen/中字体" />

            <EditText
                android:id="@+id/add_bankcard_phone_numEd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="number"
                android:hint="请填写手机号"
                android:textColor="@color/黑字体色"
                android:textSize="@dimen/中字体" />

            <LinearLayout
                android:id="@+id/add_bankcard_phone_numDeleteLin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center" >

                <Button
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/cha"
                    android:clickable="false"
                    android:focusable="false" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/add_bankcard_nextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/publicbtn_selector_bg"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>