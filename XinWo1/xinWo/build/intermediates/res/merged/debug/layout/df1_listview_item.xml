<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.quwu.xinwo.mywight.CircleImageView 
            android:layout_width="50dp"
            android:id="@+id/df1_listview_item_image"
            android:layout_height="match_parent"
            android:src="@drawable/a1"/>
        <LinearLayout 
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView 
                 android:id="@+id/df1_listview_item_nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/common_rank1"
                android:text="姓名 "
                android:textSize="@dimen/中字体"
                android:textColor="@color/黑字体色"/>
            <TextView 
                 android:id="@+id/df1_listview_item_TimeAndAreaText"
                android:textColor="@color/三c"
                android:textSize="@dimen/小字体"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1个小时前    重庆 渝北区"/>
        </LinearLayout>
        <TextView 
             android:id="@+id/df1_listview_item_original_priceText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="¥3556"
            android:gravity="center_vertical|right"
             android:textColor="@color/三c"
                android:textSize="@dimen/小字体"/>
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <com.quwu.xinwo.mywight.MyGridView
                android:id="@+id/df1_listview_item_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="auto_fit"
                android:scrollbars="none"
                android:stretchMode="spacingWidthUniform" >
            </com.quwu.xinwo.mywight.MyGridView>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView 
        android:id="@+id/df1_listview_item_goodsNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/大字体"
        android:textColor="@color/黑字体色"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="商品名称"/>
    <TextView 
        android:id="@+id/df1_listview_item_goodsDescribeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/中字体"
        android:textColor="@color/黑字体色"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="商品描述"/>
    <Button 
        android:id="@+id/df1_listview_item_totalBtn"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总需：¥2700"
        android:textColor="#FFDA44"
        android:background="@drawable/fx_total_demand"/>
    <LinearLayout 
        android:gravity="center_vertical"
         android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ProgressBar
            android:id="@+id/df1_listview_item_Bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:progress="50"
            android:layout_marginBottom="5dp"
            android:progressDrawable="@drawable/colourful_progressbar" />
   <TextView 
       android:id="@+id/df1_listview_item_residueText"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="剩余:50人次"
       android:textSize="@dimen/小字体"
       android:textColor="@color/淡灰色"/>
   <TextView 
       android:id="@+id/df1_listview_item_likeText"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="  999+"
       android:layout_marginLeft="50dp"
        android:textSize="@dimen/小字体"
       android:textColor="@color/淡灰色"
       android:drawableLeft="@drawable/sy_icn_like"
       />
        </LinearLayout>
</LinearLayout>
