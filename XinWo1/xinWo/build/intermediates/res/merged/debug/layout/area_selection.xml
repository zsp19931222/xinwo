<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="#00000000"
    android:orientation="vertical" >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/userinfo_dialog_bg"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:id="@+id/dialog_setting_head_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="选择分类"
        android:textColor="@color/lanse"
        android:textSize="20sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lanse" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e1e1e1" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:padding="16dp">
        <TextView 
            android:id="@+id/area_selection_sheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/黑字体色"
            android:textSize="12sp"
      />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="@color/黑字体色"
            android:textSize="12sp"
      />
        <TextView 
             android:id="@+id/area_selection_shi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/黑字体色"
            android:textSize="12sp"
      />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="@color/黑字体色"
            android:textSize="12sp"
      />
    </LinearLayout>
       <ListView 
            android:cacheColorHint="#00000000"  
           android:id="@+id/area_selection_listview"
           android:layout_width="match_parent"
           android:layout_height="320dp"
           android:divider="@color/bg"
           android:dividerHeight="2dp"/>
   </LinearLayout>
</LinearLayout>